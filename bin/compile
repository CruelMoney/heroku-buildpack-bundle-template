#!/bin/bash

build_dir=$1
cache_dir=$2
env_dir=$3

set -e

cd $build_dir

echo "-----> Installing libpostal"
sudo apt-get install curl autoconf automake libtool python-dev pkg-config

echo "        Cloning"
git clone https://github.com/openvenues/libpostal
cd libpostal
echo "        bootstrap"
./bootstrap.sh
mkdir temp
echo "        configure"
./configure --datadir=./temp
echo "        make"
make
sudo make install
sudo ldconfig

echo "        Success"
exit 0
