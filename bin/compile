#!/usr/bin/env bash

BUILD_DIR=/app/libpostal
CACHE_DIR=$2

mkdir -p $BUILD_DIR
mkdir -p $CACHE_DIR

echo $BUILD_DIR
echo $CACHE_DIR

echo "-----> Installing libpostal"

git clone https://github.com/openvenues/libpostal
cd libpostal/
echo "        Bootstrap"
./bootstrap.sh
./configure --prefix=/app/libpostal --datadir=$BUILD_DIR

echo $BUILD_DIR
echo $CACHE_DIR

echo "        Make"
make -j4
echo "        Make install"
make install

echo "        DONE âœ…"

echo $BUILD_DIR
echo $CACHE_DIR
